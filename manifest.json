{
  "manifest_version": 3,
  "name": "Sidekick (Proactive Assistant)",
  "version": "0.2.0",
  "description": "Translates selections, summarizes articles, grammar-checks after you pause, nudges focus, speaks reminders, and respects your privacy.",
  "permissions": ["storage", "scripting", "tabs", "tts", "alarms", "notifications", "idle"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": { "service_worker": "background.js", "type": "module" },
  "action": { "default_title": "Sidekick" },
  "options_page": "options.html",
  "icons": { "16": "icons/16.png", "48": "icons/48.png", "128": "icons/128.png" },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-assistant": {
      "suggested_key": { "default": "Ctrl+Shift+." },
      "description": "Toggle Sidekick overlay"
    }
  },
  "incognito": "split"
}
